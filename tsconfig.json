{
  "compilerOptions": {
    "incremental": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "target": "es2022",
    "module": "CommonJS",
    "lib": [
      "dom",
      "es2022"
    ],
    "declaration": true,
    "declarationMap": true,
    "noEmit": true,
    "jsx": "react",
    "strict": true,
    "sourceMap": true,
    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": ".erb/dll"
  },
  "typeRoots": [
    "node_modules/@types",
    "src/@types"
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "test",
    "release",
    "src/main.prod.js",
    "src/renderer.prod.js",
    "src/dist",
    ".erb/dll"
  ]
}
